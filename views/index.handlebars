    <h3 class="text-dark mt-5">Submit Job Statistics: </h3>
    <form action="/api/jobs" method="POST" id="form">
      <div class="form-group">
        <label for="stateCode">State Code</label>
        <input type="email" class="form-control" id="stateCode" placeholder="NC">
      </div>
      <div class="form-group">
        <label for="occCode">Occupational Code</label>
        <input type="text" class="form-control" id="occCode" placeholder="11-1021">
      </div>
      <div class="form-group">
        <label for="occTitle">Job Title</label>
        <input type="text" class="form-control" id="occTitle">
      </div>
      <div class="form-group">
        <label for="Total Employed">Total Employed</label>
        <input type="text" class="form-control" id="totalEmployed">
      </div>
      <div class="form-group">
        <label for="jobs1000">Amount of Jobs per 1,000</label>
        <input type="text" class="form-control" id="jobs1000">
      </div>
      <div class="form-group">
        <label for="locQ">Location Quotient</label>
        <input type="text" class="form-control" id="locQ">
      </div>
      <div class="form-group">
        <label for="hMean">Hourly Average</label>
        <input type="text" class="form-control" id="hMean">
      </div>
      <div class="form-group">
        <label for="aMean">Annual Average</label>
        <input type="text" class="form-control" id="aMean">
      </div>
      <div class="form-group">
        <label for="hMedian">Hourly Median</label>
        <input type="text" class="form-control" id="hMedian">
      </div>
      <div class="form-group">
        <label for="aMedian">Annual Median</label>
        <input type="text" class="form-control" id="aMedian">
      </div>
      <button type="submit" class="btn btn-primary" id="formSubmit">Form Submit</button>
    </form>
  </section>
